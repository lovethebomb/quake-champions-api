{
  "name": "quake-champions-api",
  "version": "1.0.6",
  "description": "Unofficial Quake Champions API JavaScript client",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "prepublish": "npm run lint && npm run test",
    "lint": "eslint index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lovethebomb/quake-champions-api.git"
  },
  "bugs": {
    "url": "https://github.com/lovethebomb/quake-champions-api/issues"
  },
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "quake",
    "champions",
    "api",
    "client"
  ],
  "author": "lovethebomb",
  "license": "MIT",
  "dependencies": {
    "isomorphic-unfetch": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^6.2.2",
    "jest": "^24.1.0"
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?)$",
    "moduleFileExtensions": [
      "js",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/*"
    ]
  }
}
